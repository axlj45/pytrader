PYTRADER_LOG_LEVEL={{ pytrader_log_level }}
PYTRADER_LIVE={{ pytrader_live }}

# Alpaca / Firebase (put real values in vault)
ALPACA_KEY={{ alpaca_key }}
ALPACA_SECRET={{ alpaca_secret }}
FIREBASE_CREDENTIALS_PATH={{ firebase_credentials_path }}

# OTEL (env-only wiring initially)
OTEL_SERVICE_NAME=pytrader
OTEL_RESOURCE_ATTRIBUTES=deployment.environment={{ otel_service_env }}
OTEL_EXPORTER_OTLP_ENDPOINT={{ otel_otlp_endpoint }}
{% if otel_headers|length > 0 -%}
OTEL_EXPORTER_OTLP_HEADERS={{ otel_headers }}
{%- endif %}
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp

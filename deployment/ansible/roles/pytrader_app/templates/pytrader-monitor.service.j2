[Unit]
Description=PyTrader Trade Monitor
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ pytrader_user }}
Group={{ pytrader_group }}
EnvironmentFile={{ pytrader_env_path }}
WorkingDirectory={{ pytrader_current }}
ExecStart={{ pytrader_current }}/venv/bin/pytrader monitor --log-level ${PYTRADER_LOG_LEVEL} {% if pytrader_live == "true" %}--live{% endif %}
Restart=always
RestartSec=5
KillSignal=SIGTERM
TimeoutStopSec=30

# journald
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
